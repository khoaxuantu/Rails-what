<% provide(:title) %>

<% if logged_in? %>
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
            <section class="stats">
                <%= render 'shared/stats' %>
            </section>
            <section class="micropost_form">
                <%= render 'shared/micropost_form' %>
            </section>
        </aside>
        <div class="col-md-8">
            <h3><%= t 'heading.micropost_feed' %></h3>
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>
    <div class="center jumbotron">
        <h1><%= t 'heading.welcome' %></h1>

        <h2>
            <%= raw t('description.intro')%>
        </h2>

        <% if logged_in? %>
        <h3> <%= t 'action.login_as' %> <%= @user.name %> </h3>
        <% else %>
            <%= link_to t('action.signup_now'), signup_path, class: "btn btn-lg btn-primary me-2" %>
        <% end %>

    </div>
    <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"), "https://rubyonrails.org/", class: "ms-2" %>
<% end %>
